{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "take1",
            "type": "shell",
            "command": "g++ -g \"${file}\"",
            "windows": {
                "command": "g++ \"${file}\" && a.exe"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}